{
    "root": true,
    "env": {
        "node": true
    },
    "parser": "@typescript-eslint/parser",
    "plugins": ["@typescript-eslint", "prettier"],
    "rules": {
        "prettier/prettier": [
            "error",
            {
                "printWidth": 120,
                "trailingComma": "none",
                "singleQuote": true,
                "tabWidth": 4
            },
            {
                "usePrettierrc": true
            }
        ]
    },
    "extends": ["eslint:recommended", "plugin:@typescript-eslint/recommended", "plugin:prettier/recommended"]
}
